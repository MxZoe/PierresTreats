@{
  Layout = "_Layout";
}
@using System.Security.Claims

<h1>Welcome to Pierre's Bakery!</h1>

@if (User.Identity.IsAuthenticated)
{
  <div class="row">
    <div class="col-md-6">
      <p>@Html.ActionLink("Add a flavor", "Create", "Flavors")</p>
      <p>@Html.ActionLink("See all flavors", "Index", "Flavors")</p>
    </div>
    <div class="col-md-6">
      <p>@Html.ActionLink("Add a treat", "Create", "Treats")</p>
      <p>@Html.ActionLink("See all treats", "Index", "Treats")</p>
    </div>
  </div>
  @using (Html.BeginForm("LogOff", "Account"))
    {
        <input type="submit" class="btn btn-default" value="Log out" />
    }
}
else
{
  <p>@Html.ActionLink("Create an account", "Index", "Account")</p>
  <p>@Html.ActionLink("Log in", "Login", "Account")</p>
}